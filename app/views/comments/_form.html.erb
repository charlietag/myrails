<div class="panel panel-success">
  <div class="panel-heading">Add a comment</div>
  <%= form_for([@article, @article.comments.build]) do |f| %>
    <p>
      <%= f.label :commenter %><br>
      <%= f.text_field :commenter %>
    </p>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit class: "btn btn-primary" %>
    </p>
  <% end %>
</div>

