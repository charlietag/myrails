<div class="panel panel-default">
  <div class="panel-heading">Articles List</div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Text</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
    <% @articles.each do |a| %>
      <tr>
        <td><%= a.title %></td>
        <td><%= a.text %></td>
        <td>
          <%= link_to "Show", article_url(a), class: "btn btn-primary" %>
          <%= link_to "Edit", edit_article_url(a), class: "btn btn-primary" %>
          <%= link_to "Destroy", article_path(a), 
              method: :delete,
              data: { confirm: 'Are you sure'},
              class: "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>
<%= link_to "New Article", new_article_url, class: "btn btn-lg btn-default" %>
