<%= form_for @article do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title, class: "label label-default" %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text, class: "label label-default" %>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit class: "btn btn-primary" %>
  </p>
<% end %>
<%= link_to 'Back to articles', articles_url, class: "btn btn-primary" %>
