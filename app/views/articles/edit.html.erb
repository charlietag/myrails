<h1>Editing Article</h1>
<%= form_for :article, url: article_url(@article), method: :patch do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title, class: "label label-default" %>
  </p>
  <p>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text, class: "label label-default" %>
  </p>
  <p>
    <%= f.text_area :text %>
  </p>
  <%= f.submit %>
<% end %>
<%= link_to 'Back To Articles', articles_url, class: "btn btn-primary" %>
