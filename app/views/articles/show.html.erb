<div class="panel panel-default">
  <div class="panel-heading"><%= @article.title %></div>
  <%= @article.text %>
</div>


<% if @article.comments.present? %>
  <% @article.comments.each do |c| %>
    <div class="panel panel-warning">
      <div class="panel-heading"><%= c.commenter %></div>
      <%= c.body %>
    </div>
  <% end %>
<% end %>

<div class="panel panel-success">
  <div class="panel-heading">Add a comment</div>
  <%= form_for([@article, @article.comments.build]) do |f| %>
    <p>
      <%= f.label :commenter %><br>
      <%= f.text_field :commenter %>
    </p>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit class: "btn btn-primary" %>
    </p>
  <% end %>
</div>

<%= link_to 'Back to articles', articles_url, class: "btn btn-primary" %>
<%= link_to "Edit this article", edit_article_url(@article), class: "btn btn-primary" %>
